      %h3.LeftHeader__UserName
        = current_user.name
      .LeftHeader__iconList
        = link_to new_group_path do
          = icon('fas', 'edit', class: "LeftHeader__Icon")
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: "LeftHeader__Icon")
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to '#' do
          .Group__name
            = group.name
